<Window x:Class="MiniATM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniATM"
        mc:Ignorable="d"
        Title="MIni ATM" Height="400" Width="300">
    <Grid Margin="10">
        
            <StackPanel>
                <TextBlock Text="Welcome to Mini ATM" FontWeight="Bold" FontSize="18" Margin="0,0,0,20" TextAlignment="Center"/>

                <Button Content="Check Balance" Click="CheckBalance_Click" Margin="0,5"/>
                <Button Content="Deposit" Click="Deposit_Click" Margin="0,5"/>
                <Button Content="Withdraw" Click="Withdraw_Click" Margin="0,5"/>
                <Button Content="Exit" Click="Exit_Click" Margin="0,5"/>
                
            </StackPanel>


       

    </Grid>
</Window>
