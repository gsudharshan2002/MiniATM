<Window x:Class="MiniATM.LonginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniATM"
        mc:Ignorable="d"
        Title="LonginWindow" Height="200" Width="300">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Enter your PIN" FontSize="16" Margin="0,0,0,10"/>
            <PasswordBox x:Name="pinBox" FontSize="16" Margin="0,0,0,10"/>
            <Button Content="Login" Click="Login_Click" FontSize="14"/>
        </StackPanel>

    </Grid>
</Window>
